
<div class="d-flex justify-content-between top-navbar p-4">
    <div class="fs-5">
        Welcome <strong>@(Username)</strong>
    </div>
    <div class="d-flex align-items-center">
        @{ if (_isSystemActive)
            {
                <span class="active me-3 fw-bold">Active</span>
            }
            else
            {
                <span class="inactive me-3 fw-bold">Inactive</span>

            }

        }

        <span class="material-icons me-3">
            calendar_month
        </span>
        <strong> Date </strong>: @DateTime.Now
    </div>
</div>

@code {
    [CascadingParameter]
    private GlobalState _globalState { get; set; }
    private bool _isSystemActive { get; set; }

    [Parameter]
    public string Username { get; set; }

    protected override void OnInitialized()
    {
        _isSystemActive = Helper.IsSystemAvailable();
    }

}

