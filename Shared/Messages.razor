<div class="mb-3">

@if (MessageType == "Success")
{
<div class="alert alert-success p-4" role="alert">
    <span class="">
        @Message
    </span>
</div>
}
else
{
<div class=@((MessageType=="Error" ? "alert-danger p-4" : "alert-warning p-4")) role="alert">
    <span class="">
        @Message
    </span> 
</div>
}
</div>

@code {
    [Parameter]
    public string Message { get; set; }
    [Parameter]
    public string MessageType { get; set; }
}

