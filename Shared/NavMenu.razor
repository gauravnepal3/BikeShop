@inject NavigationManager NavManager

<nav class="flex-column">
    <div class="d-flex align-items-center my-3 mx-5">
        <span class="material-icons fs-1 text-primary">
            directions_bike
        </span>
        <div class="nav-item px-3 fw-bold fs-3">bikeShop</div>
    </div>
    @*Nav Items only allowed for admins*@
    @if (UserRole == Role.Admin)
    {
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="items">
                <span class="material-icons me-3">
                    inventory_2
                </span>
                <span>
                    Items
                </span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="item-approval">
                <span class="material-icons me-3">
                    fact_check
                </span>
                <span>
                    Approve Request
                </span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="users">
                <span class="material-icons me-3">
                    group
                </span>
                <span>
                    Users
                </span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="reports">
                <span class="material-icons me-3">
                    summarize
                </span>
                <span>
                    Monthly Reports
                </span>
            </NavLink>
            <NavLink class="nav-link d-flex align-items-center" href="chart">
                <span class="material-icons me-3">
                    timeline
                </span>
                <span>
                    Charts
                </span>
            </NavLink>
        </div>
    }
    @*Nav Items allowed for all users*@
    <div class="nav-item px-3">
        <NavLink class="nav-link d-flex align-items-center" href="item-removal">
            <span class="material-icons me-3">
                category
            </span>
            <span>
                Request Items
            </span>
        </NavLink>
    </div>
    <div class="nav-item px-3">
        <NavLink class="nav-link d-flex align-items-center" href="change-password">
            <span class="material-icons me-3">
                key
            </span>
            <span>
                Change Password
            </span>
        </NavLink>
    </div>
    @if (UserRole == Role.Admin)
    {
        <div class="nav-item px-3">
            <NavLink class="nav-link text-danger d-flex align-items-center" href="restore-item">
                <span class="material-icons me-3">
                    restore_from_trash
                </span>
                <span>
                    Restore Items
                </span>
            </NavLink>
        </div>
    }
    <div class="nav-item px-3">
        <NavLink class="nav-link text-danger d-flex align-items-center" role="button" @onclick="LogoutHandler">
            <span class="material-icons me-3">
                logout
            </span>
            <span>
                Logout
            </span>
        </NavLink>
    </div>
</nav>

@code {
    [Parameter]
    public Role UserRole { get; set; }
    [Parameter]
    public EventCallback LogoutHandler { get; set; }
}
